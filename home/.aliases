# Be nice to the machine.
alias please='sudo'

# Quickly navigate up the great hollow.
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Directory shortcuts
alias dl='cd ${HOME}/Downloads'
alias dt='cd ${HOME}/Desktop'
alias rp='cd ${HOME}/dev/repos'

alias gswm='git switch master'



# Weather
# Found in @noopkat‚Äôs dotfiles (https://github.com/noopkat/dotfiles)
alias weather='curl http://wttr.in/Eindhoven'
alias moon='curl http://wttr.in/Moon'



# Extract .tar/.tar.gz/.tar.bz archives because who has time to remember this awful interface.
alias untar='tar -xf'
alias untargz='tar -xzf'
alias untarbz='tar -xjf'

# I finally had enough of typing this out
alias aptupdate='sudo apt update \
  && apt list --upgradable \
  && sudo apt upgrade -y \
  && sudo snap refresh'

# Echo path, but with each entry on its own line
alias path='echo -e ${PATH//:/\\n}'

# Open files in an editor like code, subl, gedit or vim.
alias o=code

# Cat replacement.
# https://github.com/sharkdp/bat
alias cat='bat --plain'

# Find replacement.
# https://github.com/sharkdp/fd
alias fd='fdfind'



# Default ‚Äúls‚Äù should always show
# -l  as a list
# -h  with human-readable file sizes
# -F  with indicator (e.g. trailing / for directories)
alias ls='ls -lhF --color'

# Better directory listing.
#
# Enable colored output and sort output in the following order:
# directory, regular files, symbolic links

list_sorted() {
  # List directories
  ls $* | grep "^d" | awk '{printf "\033[1;34müìÅ\033[0m " $0 "\n"}';
  # List regular files
  ls $* | grep "^-" | awk '{print "üìÑ " $0}';
  # List links
  ls $* | grep "^l" | awk '{print "üîó " $0}';
  # List everything else (e.g. symbolic links)
  ls $* | grep -v -E "^d|^-|^l|^total"
}

alias ll=list_sorted


# Tree-like directory listing.
alias tree="tree --dirsfirst -F -I '.git|node_modules'"

# Make sure ‚Äúpython‚Äù defaults to version 3
alias python=python3
alias pip=pip3

