# Create a directory and the change working directory to it
make_change_dir() {
  # Create a directory if it doesnâ€™t already exist
  mkdir -p -- "$1" &&
  # Change directory to the previously created directory
  # `$_` refers to the argument used in the last command
  cd -- "$_"
}

alias mkcd=make_change_dir

# Enable colored output and sort output by directory first, files second,
# symlinks third

# Default ls should always show
# -l  as a list
# -h  with human-readable file sizes
# -F  with indicator (e.g. trailing / for directories)
alias ls='ls -lhF --color'

list_sorted() {
  # List directories
  ls $* | grep "^d" | awk '{printf "\033[1;34mðŸ–¿\033[0m  " $0 "\n"}';
  # List regular files
  ls $* | grep "^-" | awk '{print "ðŸ—Ž  " $0}';
  # List links
  ls $* | grep "^l" | awk '{print "ðŸ”— " $0}';
  # List everything else (e.g. symbolic links)
  ls $* | grep -v -E "^d|^-|^l|^total"
}

alias ll=list_sorted
